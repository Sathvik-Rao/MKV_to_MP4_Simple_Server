# Copy this file to .env and edit values as needed
# Do NOT commit your real .env file (it's ignored by .gitignore)

# Flask secret key used for session signing
FLASK_SECRET_KEY_MKV2MP4=your-secret-key-here

# Upload / output folders
# Namespaced folders (preferred)
UPLOAD_FOLDER_MKV2MP4=uploads
OUTPUT_FOLDER_MKV2MP4=outputs

# Basic auth credentials
# Namespaced auth
USERNAME_MKV2MP4=admin
PASSWORD_MKV2MP4=password123

# Port to run the Flask app on
# Port to run the Flask app on (namespaced)
PORT_MKV2MP4=5000

# Max upload size in bytes (default = 5GB)
MAX_CONTENT_LENGTH_MKV2MP4=5368709120

# Gunicorn workers (namespaced)
GUNICORN_WORKERS_MKV2MP4=1
